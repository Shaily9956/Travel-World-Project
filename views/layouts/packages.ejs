<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/packages.css">
    <link rel="stylesheet" href="/common.css">
</head>

<body>

    <!-- header of packages section starts here -->
    <div class="packages">
        <div class="container-fluid">
            <header>
                <nav class="navbar navbar-expand-lg navbar-light">
                    <!-- Logo -->
                    <div class="navbar-brand d-flex align-items-center">
                        <img src="/Images/icon.png" alt="Logo" class="img-fluid" style="height: 40px;">
                        <span class="ms-2 fw-bold">Travel</span><span class="ms-1 fw-bold">World</span>
                    </div>
                
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    
                    <div class="collapse navbar-collapse" id="navbarMenu">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="/travelWorld/home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/travelWorld/about">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/travelWorld/review">Review</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/travelWorld/packages">Packages</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/travelWorld/book">Book</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/travelWorld/contact">Contact</a>
                            </li>
                            <li class="nav-item">
                                <% if(!currUser) {%>
                                    <button type="button" class="btn  btn-outline-primary me-2" id="signInButton">Sign In</button>
                                    <button type="button" class="btn  btn-outline-secondary" id="signUpButton">Sign Up</button>
                           <% } %> 
                            </li>
                            <li class="nav-item">
                           <% if(currUser) {%>
                            <form method="GET" action="http://localhost:3000/travelWorld/signOut">
                                <button type="submit" class="btn btn-outline-danger " id="signOut" >Sign Out</button></form>
                           
                          <%   } %>
                
                        </li>
                        </ul>
                    </div>
                </nav>

                <section class="text-center mt-3">
                    <p class="mt">Packages</p>
                </section>
            </header>
        </div>
    </div>

    <!-- packages information start form here -->

    <section class="pacakges-info">
        <h2>Perfect Tour Packages</h2>

        <div class="container">
            <% for (let package of packages) { %>
            <div class="card" onclick="location.href='/travelWorld/packages/<%= package._id %>'">
                <div class="card-img-container">
                    <img src="<%= package.image %>" class="card-img-top">
                </div>

                <div class="card-body">

                    <h5>
                        <i class="fas fa-map-marker-alt"></i> <%= package.location %>
                
                    </h5>
                    <p>
                        <%=  package.description %>
                    </p>
                   

                    <p style=" font-weight: 600; font-size: 1rem; color:grey ">&#8377;
                        <%=  package.price.toLocaleString("en-IN") %>
                    </p>


                  
                </div>
            </div>
            <% } %>
        </div>

        <br>
        <br>
       
        


    </section>
    <br>
    <br>
    <!-- About footer Section -->

    <footer class="footer">
        <div class="footer-container">

            <div class="footer-section about">
                <h3>About Us</h3>
                <p>
                    We offer the best travel packages, tours, and unforgettable experiences to make your dream vacations
                    a reality.
                </p>
            </div>


            <div class="footer-section links">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="/travelWorld/home">Home</a></li>
                    <li><a href="/travelWorld/about">About</a></li>
                    <li><a href="/travelWorld/review">Review</a></li>
                    <li><a href="/travelWorld/packages">Packages</a></li>
                    <li><a href="/travelWorld/book">Book</a></li>
                    <li><a href="/travelWorld/contact">Contact</a></li>
                </ul>
            </div>


            <div class="footer-section contact-info">
                <h3>Contact Us</h3>
                <p><i class="fas fa-map-marker-alt"></i> Avas Vikas Colony,UP</p>
                <p><i class="fas fa-phone"></i> +1 234 567 8900</p>
                <p><i class="fas fa-envelope"></i> travelworld@gmail.com</p>
            </div>


            <div class="footer-section social-media">
                <h3>Follow Us</h3>
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-youtube"></i></a>
            </div>
        </div>


    </footer>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
     


</body>

</html>